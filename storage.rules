rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Regras para arquivos de treinamento
    match /trainings/{allPaths=**} {
      // Usuários autenticados podem ler arquivos de treinamento
      allow read: if request.auth != null;
      
      // Apenas admins podem fazer upload de arquivos de treinamento
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Regras para outros arquivos (avatars, etc.)
    match /users/{userId}/{allPaths=**} {
      // Usuários podem ler/escrever apenas seus próprios arquivos
      // Admins podem acessar qualquer arquivo
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || 
         firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
  }
}
